# Browser Configuration
HEADLESS=true

# Proxy Settings (optional)
PROXY_URL=

# LinkedIn Authentication (optional - for testing only)
# Note: Use test accounts only, never production credentials
# Authentication enables:
# - Access to profiles that require login
# - Session persistence (cookies saved locally)
# - Reduced blocking from LinkedIn
# WARNING: Use at your own risk. LinkedIn may restrict accounts that scrape.
LOGIN_EMAIL=
LOGIN_PASSWORD=

# Rate Limiting
REQUEST_DELAY=2
MAX_RETRIES=3

# Output Settings
OUTPUT_FORMAT=csv
OUTPUT_DIR=./output

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=human  # Options: human, json
LOG_FILE=./logs/scraper.log

# Error Tracking (optional)
# Sentry DSN for error monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=development
