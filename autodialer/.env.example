# Twilio API Credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=+18001234567

# Database Configuration
DATABASE_URL=postgresql://localhost/autodialer_development

# Redis Configuration (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Rails Environment
RAILS_ENV=development

# Application Base URL (for Twilio webhooks)
APP_BASE_URL=http://localhost:3000

# OpenAI API Key (for AI prompt parsing)
OPENAI_API_KEY=

# Safety Features
# Set to 'true' to allow calls to non-toll-free numbers in development mode
# WARNING: Use with caution! Only enable when you need to test with real numbers
# By default, only toll-free numbers (800, 888, 877, 866, 855, 844, 833) are allowed
ALLOW_REAL_CALLS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=human  # Options: human, json
LOG_FILE=  # Leave empty for stdout, or specify path like ./log/production.log

# Error Tracking (optional)
# Sentry DSN for error monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Version
APP_VERSION=1.0.0
