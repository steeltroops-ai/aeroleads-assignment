# EditorConfig for consistent coding standards
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rb,ts,tsx,js,jsx,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.rb]
indent_size = 2
max_line_length = 120

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab
